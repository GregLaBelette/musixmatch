<h1>My songs</h1>
<hr class='mb-4'>

<ul>
  <% @songs.each do |song| %>
    <li>
      <%= link_to song_path(song) do %>
        <%= song.title %>
      <% end %>
      <span> by </span>
      <%= link_to artist_path(song.artist) do %>
        <%= song.artist.name %>
      <% end %>
    </li>
  <% end %>
</ul>

<div class="d-flex w-100 justify-content-end">
  <%= link_to 'New song', new_song_path, class: 'btn btn-warning text-white' %>
</div>
